<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REPORT VPN Connection Problem"
            android:id="@+id/textView7"
            android:layout_gravity="center"
            android:textColor="@color/primary"
            android:textSize="16dp"
            android:layout_margin="3dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textError"
            android:layout_gravity="center"
            android:textColor="#ffff0000"
            android:layout_margin="3dp" />
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Your email:"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:textSize="14dp"
            android:layout_margin="5dp"
            android:textColor="@color/primary"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editMailAddress"
            android:layout_weight="1.3"
            android:layout_margin="2dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Country you tried:"
            android:id="@+id/textView3"
            android:textColor="@color/primary"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="14dp" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerCountries"
            android:layout_weight="1.3"
            android:layout_margin="2dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Problem category:"
            android:id="@+id/textView4"
            android:textSize="14dp"
            android:layout_margin="5dp"
            android:textColor="@color/primary"
            android:layout_gravity="center_vertical" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/rGroupCategory">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internet is not working"
                android:id="@+id/radioCategory1"
                android:textSize="14dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="unable to connect to VPN"
                android:id="@+id/radioCategory2" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:id="@+id/radioCategory3" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequency of this problem:"
            android:id="@+id/textView5"
            android:textSize="14dp"
            android:layout_margin="5dp"
            android:textColor="@color/primary"
            android:layout_gravity="center_vertical" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/rGroupFrequency">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It&apos;s first time it happened"
                android:id="@+id/radioProblem1" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It happens sometimes"
                android:id="@+id/radioProblem2" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It happens all the time"
                android:id="@+id/radioProblem3" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Comments:"
            android:id="@+id/textView6"
            android:textColor="@color/primary"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="14dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/editComment"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.3"
            android:layout_margin="3dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/btnSend"
            android:layout_gravity="center"
            android:textColor="@color/primary" />
    </FrameLayout>

</LinearLayout><!-- From: file:/Volumes/Work/Workspace/android/wpandroid/wp-android/main/src/main/res/layout/report_dialog.xml -->